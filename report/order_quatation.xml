<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="order_and_quatiaion" inherit_id="web.external_layout_boxed">
        	 <xpath expr="//t/div/div[hasclass('pt-5')]" position="before">
      		 <t t-set="doc.state" t-value="doc"/>
        	 <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Order No </span>
                    <span t-if="doc.state in ['draft','sent']">Quotation No </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice No </span>
                </t>
            </h2>
             <h5>
                <span t-field="doc.name"/>
               </h5>
        </xpath>  
        </template>
    </data>
</odoo>

