<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- this is the main view for hosiptial-->
<record id="main_prod_action" model="ir.actions.act_window">
    <field name="name">Production Application</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">prod_order.model</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context"></field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
        Create Your New Production Order   
        </p>
    </field>
</record>

<!-- this tree Views for hosiptial-->
  <record id="main_prod_tree" model="ir.ui.view">
        <field name="name">production.order.tree</field>
        <field name="model">prod_order.model</field>
        <field name="arch" type="xml">
            <tree multi_edit="1">   
                <field name="customer_ref"/>
                <field name="main_sales_id"/>
                <field name="state"/>
                <field name="delivery_week"/>
                <field name="create_date"/>
            </tree>
        </field>
   </record> 


     <record id="main_prod_form" model="ir.ui.view">
        <field name="name">production.order.form</field>
        <field name="model">prod_order.model</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                        <field name="state" statusbar_visible="new,prod,done,delivered" default="new" widget="statusbar"/>
                         <button id="button_new" name="action_new" string="Set to New" confirm="are you sure to set this record as New?" type="object" states="cancel" class="btn-primary"/>
                        <button id="button_prod" name="action_prod" string="In Production" confirm="are you sure to confirm to in production state?" type="object" states="new" class="btn-primary"/>
                         <button id="button_done" name="action_done" confirm="are you sure to this record as done?" string="Mark as done" type="object" states="prod" class="btn-primary"/>
                         <button id="button_delivered" name="action_delivered" confirm="are you sure to set this record as delivered?" string="Mark as delivered" type="object" states="done" class="btn-primary"/>
                         <button id="button_cancel"  name="action_cancelled" confirm="are you sure to cancel this record?" string="Canceled" type="object" states="new,prod,done,delivered"/>
                </header>
                <sheet>
                                        <div class="oe_title">
                        <h1>
                            <field name="customer_ref"/>
                        </h1>
                    </div>
                    <group>
                        <!--this splts form into 2 -->
                        <group>
                            <field name="customer_ref" string="Customer" default="New"/>
                            <field name="main_sales_id" />
                            <field name="order" />
                            <field name="deli_address" />
                        </group>
                        <group>
                            <field name="delivery_date" />
                            <field name="delivery_week" />
                            <field name="delivered_all"/>
                            <field name="total_vol"/>
                            <field name="total_wei"/>
                            <field name="total_ite"/>
                        </group> 
                    </group>
                    <notebook>
                            <page name="order_lines" string="Order Lines">
                                       <field name="orderLines_ids" readonly="1"> 
                                            <tree>
                                                 <field string="id" name="id"/>
                                                 <field string="Marking" name="line_marking"/>
                                                 <field string="Art_No and description" name="product_id"/>
                                                 <field string="Line Discount" name="discount"/>
                                                 <field string="Product Instruction" name="prod_ist"/>
                                                 <field string="Delivered Quantity" name="product_uom_qty"/>
                                                 <field string="Unit of Measure" name="product_uom"/>
                                            </tree>

                                    </field>    
                                  
                            </page>
                        </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
         </field>
   </record>

<menuitem id="production_app_root" 
        name="Production Application"
        sequence="10"/>

<menuitem id="production_sub_menu" 
        name="Production Orders"
        parent="production_app_root"
        sequence="10"/>


<menuitem id="hospitial_patient" 
        name="Oders List"
        parent="production_sub_menu"
        action="main_prod_action"
        sequence="10"/>

</odoo>

    