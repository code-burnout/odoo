<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="add_options" model="ir.actions.report">
            <field name="name">Tilbud/ordre</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">production_app.report_saleorder_nor</field>
            <field name="report_file">production_app.report_saleorder_nor</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Tilbud - %s' % (object.name)) or 'ordre - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_pro_forma" model="ir.actions.report">
            <field name="name">PRO-FORMA-faktura</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">production_app.report_saleorder_pro_nor</field>
            <field name="report_file">production_app.report_saleorder_pro_nor</field>
            <field name="print_report_name">'PRO-FORMA - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('sale.group_proforma_sales'))]"/>
        </record>
    </data>
</odoo>
